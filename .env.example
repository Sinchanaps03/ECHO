# Environment Variables for ECHOSKETCH
# Copy this file to .env and fill in your API keys

# OpenAI API for DALL-E image generation
OPENAI_API_KEY=your_openai_api_key_here

# Google Speech-to-Text API
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/echosketch

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Hugging Face API for NLP models
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Stable Diffusion API (optional alternative to OpenAI)
STABILITY_API_KEY=your_stability_api_key_here

# Server configuration
HOST=localhost
PORT=5000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000